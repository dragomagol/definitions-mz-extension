{
	"manifest_version": 2,
	"name": "Message Passing Extension",
	"description": "Example of message passing between background and popup scripts",
	"version": "1.0",
	"permissions": [
		"activeTab",
		"all_urls",
		"tabs",
		"webNavigation"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
  